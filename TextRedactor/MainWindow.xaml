<Window x:Class="TextRedactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextRedactor"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="525" ResizeMode="NoResize">
    <Grid Height="319" VerticalAlignment="Bottom">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="517">
            <Button Name="Cut" Content="Cut" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="CutClick"/>
            <Button Name="Copy" Content="Copy"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="CopyClick"/>
            <Button Name="Paste" Content="Paste" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="PasteClick"/>
        </Menu>
        
        <TextBox Name="Text" HorizontalAlignment="Left" Height="279" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="499" Margin="10,0,0,0"/>
        
    </Grid>
</Window>
